{% if site.teaching.size > 0 %}
  <div class="teaching">
    {% for item in site.teaching %}
      <div class="teaching-item">
        <span class="teaching-date">{{ item.date }}</span>
        <a href="{{ item.url | relative_url }}" class="teaching-title">{{ item.title }}</a>
      </div>
    {% endfor %}
  </div>
{% else %}
  <p>No teaching materials available.</p>
{% endif %}